<div class="row">
    {% if gallery.galleryType is same as('carousel') %}
    <div class="col-md-7">
        <div id="heroCarousel" class="carousel slide">
            <!-- Carousel items -->
            <div class="carousel-inner">
                {% for mediaItem in gallery.galleryItems %}
                    <div class="item">
                        <img src="{{ sonata_path(mediaItem.media, 'big')  }}" alt="" />
                        <div class="carousel-caption">
                            <p>{{ mediaItem.media.getDescription }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#heroCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#heroCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
    {% else %}
        {% for mediaItem in gallery.galleryItems %}
            <div class="thumbnail col-3">
                <a href="{{ sonata_path(mediaItem.media, 'big')  }}" data-toggle="lightbox" data-gallery="gallery_{{ gallery.id }}">
                    {{ sonata_thumbnail(mediaItem.media, 'small')  }}
                </a>
                {% if  mediaItem.media.name is defined %}
                    <h5>{{ mediaItem.media.name }}</h5>
                {% endif %}
                {% if  mediaItem.media.description is defined %}
                    <p>{{ mediaItem.media.description }}</p>
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}
</div>



