{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Welcome {{ app.user }}</h1>

    <div class="progress" id="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <section>
        <h3> Your registered passkeys:</h3>
        <div id="list"></div>
    </section>
    <p id="message" class="instructions"></p>
    <div class="form-group">
        <input type="text" value="{{ deviceName }}" name="deviceName" id="deviceName">
        <label for="deviceName">Device name</label>
    </div>
    <button id="create-passkey" class="d-none btn btn-sm btn-primary" ><i class="fa fa-fingerprint"></i> Create a passkey</button>
</div>
{% endblock %}

{% block body_end %}
    {{ parent() }}
    <script src="{{ asset('webauthnRegister.js', 'init_cms') }}"></script>
{% endblock %}
